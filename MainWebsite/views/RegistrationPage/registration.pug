    script.
    
      function showpass() {
      var x = document.getElementById("inputPassword4");
      if (x.type === "password") {
      x.type = "text";
      }
      else {
      x.type = "password";
      }
      }

      function email_validate()
      {
       var email=document.getElementById("inputEmail4").value;
  
       const reg = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        if(reg.test(email))
        {
          document.getElementById("lbl1").innerHTML="Valid Email";
          document.getElementById("lbl1").style.color="greenyellow";
          document.getElementById("lbl1").style.visibility="visible";
        }
         else
        {
          document.getElementById("lbl1").innerHTML="Invalid Email";
          document.getElementById("lbl1").style.color="red";
          document.getElementById("lbl1").style.visibility="visible"
        }
        }

        function address2_validate()
        {
          var address2=document.getElementById("inputAddress2").value;
          if(address2!="")
          {
            document.getElementById("lbl4").innerHTML="Looks Good!";
            document.getElementById("lbl4").style.color="greenyellow";
            document.getElementById("lbl4").style.visibility="visible";
          }
           else
          {
            document.getElementById("lbl4").innerHTML="Please enter this field";
            document.getElementById("lbl4").style.color="red";
            document.getElementById("lbl4").style.visibility="visible"
          }
        }

        function city_validate()
        { 
          var city=document.getElementById("inputCity").value;
          if(city!="")
          {
            document.getElementById("lbl5").innerHTML="Looks Good!";
            document.getElementById("lbl5").style.color="greenyellow";
            document.getElementById("lbl5").style.visibility="visible";
          }
           else
          {
            document.getElementById("lbl5").innerHTML="Please enter this field";
            document.getElementById("lbl5").style.color="red";
            document.getElementById("lbl5").style.visibility="visible"
          }
        }

        function address_validate()
        {
          var address=document.getElementById("inputAddress").value;

          if(address!="")
          {
            document.getElementById("lbl3").innerHTML="Looks Good!";
            document.getElementById("lbl3").style.color="greenyellow";
            document.getElementById("lbl3").style.visibility="visible";
          }
           else
          {
            document.getElementById("lbl3").innerHTML="Please enter this field";
            document.getElementById("lbl3").style.color="red";
            document.getElementById("lbl3").style.visibility="visible"
          }
          }
        function pin_validate()
        {
          var zip=document.getElementById("inputZip").value;
          regex = /(^\d{6}$)/; 
          if(regex.test(zip))
          {
            document.getElementById("lbl6").innerHTML="Valid Zip!";
            document.getElementById("lbl6").style.color="greenyellow";
            document.getElementById("lbl6").style.visibility="visible";
          }
           else
          {
            document.getElementById("lbl6").innerHTML="Invalid Zip";
            document.getElementById("lbl6").style.color="red";
            document.getElementById("lbl6").style.visibility="visible"
          }
          
         }

